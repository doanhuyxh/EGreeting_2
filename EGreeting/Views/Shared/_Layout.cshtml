@inject EGreeting.Services.VersionUpdate VersionUpdate

@{
    string version = VersionUpdate.Version();

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EGreeting</title>
    <meta name="keywords" content="Thiệp mừng online">
    <meta name="description" content="Thiệp mừng online">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://thiep.devtest.io.vn">
    <meta property="og:title" content="Thiệp mừng online">
    <meta property="og:description" content="Thiệp mừng online">
    <meta property="og:image" content="https://thiep.devtest.io.vn/assets/img/logo.png">
    <meta name="author" content="Thiệp mừng online">

    <meta property="og:image" content="https://thiep.devtest.io.vn/assets/img/logo.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"  />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css?v=@version" asp-append-version="true" />
    <link rel="stylesheet" href="~/EGreeting.styles.css?v=@version" asp-append-version="true" />
    <link href="~/css/iegreenting.css?v=@version" rel="stylesheet" />
    <link href="~/css/style.css?v=@version" rel="stylesheet" />
    <link href="~/css/home-page.css?v=@version" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
    <div class="loading-main" id="loadingMore">
        <div class="loading-background"></div>
        <div class="u-loading">
            <div class="u-loading__symbol">
                <img src="~/assets/img/logo.png" />
            </div>
        </div>
    </div>
    @await Component.InvokeAsync("HeaderMain")

            @RenderBody()

    @await Component.InvokeAsync("FooterMain")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.10.2/dist/umd/popper.min.js" ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.5/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.all.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('.btn-menu').on('click', function () {
                $('#mobile-menu').slideToggle();
            });

            $('.toggle-mega-menu').on('click', function (e) {
                e.preventDefault();

                if ($('#mobile-menu').is(':visible')) {
                    $('#mobile-menu').slideUp(function () {
                        $('#mega-menu').slideToggle();
                    });
                } else {
                    $('#mega-menu').slideToggle();
                }
            });

            $(document).on('click', function (e) {
                if (!$(e.target).closest('#mega-menu, .toggle-mega-menu').length) {
                    $('#mega-menu').slideUp();
                }
            });
        });

    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
